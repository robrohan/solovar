{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib/types",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "module": "es2015",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "es2015",
    ],
  },
  "exclude": [
    "./src/**/*.test.ts",
  ],
  "include": [
    "./src/**/*",
    "./__mocks__/**/*"
  ]
}